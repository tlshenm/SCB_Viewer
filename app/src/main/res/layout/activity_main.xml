<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seong.ll.SCB_Viewer.activity.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/folder_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white" />


    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:id="@+id/main_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/color_white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/folder_open_fab_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <!--플로팅 버튼 Open 상태-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"
            android:orientation="vertical" />

        <!--이어보기 버튼-->
        <LinearLayout
            android:id="@+id/open_keep_view_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="216dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:text="이어보기"
                android:textColor="@color/color_white" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:elevation="10dp">

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:elevation="20dp"
                    android:padding="0dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_bookmark_white_48dp"
                    android:elevation="30dp" />
            </FrameLayout>
        </LinearLayout>


        <!--폴더 편집 버튼-->
        <LinearLayout
            android:id="@+id/open_edit_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="152dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:text="폴더편집"
                android:textColor="@color/color_white" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:elevation="10dp">

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:elevation="20dp"
                    android:padding="0dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_edit_button_image_48dp"
                    android:elevation="30dp" />
            </FrameLayout>
        </LinearLayout>

        <!--만화(콘텐츠) 추가-->
        <LinearLayout
            android:id="@+id/open_add_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="88dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:text="만화추가"
                android:textColor="@color/color_white" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:elevation="10dp">

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:elevation="20dp"
                    android:padding="0dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_add_white_48dp"
                    android:elevation="30dp" />
            </FrameLayout>
        </LinearLayout>

        <!--<View-->
            <!--android:id="@+id/folder_menu_clear_fab"-->
            <!--android:layout_width="56dp"-->
            <!--android:layout_height="56dp"-->
            <!--android:layout_gravity="bottom|end"-->
            <!--android:layout_margin="@dimen/fab_margin"-->
            <!--android:elevation="0dp"-->
            <!--android:minHeight="56dp"-->
            <!--android:padding="0dp" />-->
    </FrameLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_menu_fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="66dp"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_add_white_48dp" />

    <Button
        android:id="@+id/continue_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="0dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/color_white"
        android:textSize="16dp"
        android:text="이어보기"

        />

</FrameLayout>